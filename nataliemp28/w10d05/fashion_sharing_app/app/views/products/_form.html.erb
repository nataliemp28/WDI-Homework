<%= form_for(product) do |f| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>

  <div class="field">
    <%= f.label :retailer %>
    <%= f.collection_select :retailer_id, Retailer.all, :id, :name %>
  </div>

  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image, width: 200 %>
  </div>

  <div class="field">
    <%= f.label :price_at_purchase %>
    <%= f.text_field :price_at_purchase %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
