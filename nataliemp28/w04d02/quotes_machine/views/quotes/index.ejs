<main>
  <h1>Inspirational (and amusing) quotes.</h1>

  <% for(var i=0; i<quotes.length; i++) { %>

    <div class="container-fluid">
    <h4><strong>Quote</strong> <%= quotes[i]['details'] %></h4></li>
    <h4><strong>Author</strong> <%= quotes[i]['author'] %></h4>
    <a class="btn" href="/quotes/<%= quotes[i].id %>/edit">Edit</a>
    <form method="post" action="/quotes/<%= quotes[i].id %>">
    <input type="hidden" name="_method" value="delete">
    <input class="btn" type="submit" value="Delete">

    </form>
    </div>
    <% } %>
  </ul>
</main>
